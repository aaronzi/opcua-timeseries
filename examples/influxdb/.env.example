# Environment variables for docker-compose
# Copy this file to .env and modify the values as needed

# InfluxDB Configuration
INFLUXDB_INIT_USERNAME=admin
INFLUXDB_INIT_PASSWORD=adminpassword
INFLUXDB_INIT_ORG=opcua-org
INFLUXDB_INIT_BUCKET=opcua-timeseries
INFLUXDB_INIT_RETENTION=1w
INFLUXDB_INIT_ADMIN_TOKEN=opcua-admin-token-please-change-this

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin

# OPC UA Server Configuration
OPCUA_IMAGE_TAG=1.0.0

# Ports (change if you have conflicts)
OPCUA_PORT=4840
INFLUXDB_PORT=8086
GRAFANA_PORT=3000
